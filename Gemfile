source 'https://rubygems.org'

gem 'gem-release'
gem 'jwt'
gem 'rake'

group :development do
    gem 'omniauth-oauth2'
    gem 'dotenv'
    gem 'pry'
    gem 'rubocop', require: false
    gem 'shotgun'
    gem 'sinatra'
    gem 'thin'
end

group :test do
    gem 'guard-rspec', require: false
    gem 'listen'
    gem 'rack-test'
    gem 'rspec', '~> 3.9'
    gem 'codecov', require: false
    gem 'simplecov'
    gem 'webmock'
end
